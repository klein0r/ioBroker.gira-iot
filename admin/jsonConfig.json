{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "serverIp": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Server",
                    "help": "IP or hostname of your Gira X1 or HomeServer"
                },
                "serverPort": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Port"
                },
                "userName": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Username"
                },
                "userPassword": {
                    "type": "password",
                    "repeat": false,
                    "visible": false,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Password"
                },
                "createRoomsAndFunctions": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Create rooms and functions automatically"
                },
                "webInstance": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "web",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Web adapter instance"
                },
                "ipInterface": {
                    "type": "ip",
                    "listenOnAllPorts": false,
                    "onlyIp4": true,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "IP interface for incoming connections"
                },
                "_ioBrokerKursBanner": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "href": "https://haus-automatisierung.com/iobroker-kurs/?refid=iobroker-gira-iot",
                    "src": "https://haus-automatisierung.com/images/ads/ioBroker-Kurs.png"
                }
            }
        }
    }
}